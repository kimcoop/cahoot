.container
	.row
		.span12
			%h1= "Editing Item #{@list_item.name}"

	.row
		.span12
			= simple_form_for [@list_item.list, @list_item] do |f|
				%fieldset
					= f.input :name, label: "Name", input_html: {class: "span5"}
				%fieldset
					= f.input :description, label: "Description", input_html: {class: "span5", rows: 2}
				%fielset
					= f.input :state, label: "State", collection: ListItem.state_options_for_select, prompt: "Select State"
				%fieldset
					=	f.association :owner, collection: User.all(order: 'first').each.map(&:first), prompt: "Assign Item To", label: "Assign Item To"
				= f.button :submit


			= link_to 'Show', [@list_item.list, @list_item]
			\|
			= link_to 'Back', root_path
