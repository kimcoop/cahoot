.container
	.row
		.span12
			%h1 Editing List Item

	.row
		.span12
			= simple_form_for @list_item do |f|
				%fieldset
					= f.input :name, label: "Name"
				%fieldset
					= f.input :description, label: "Description"
				%fielset
					= f.input :state, label: "State", collection: ListItem.state_options_for_select, prompt: "Select State"
				%fieldset
					=	f.association :owner, collection: User.all(order: 'first').each.map(&:first), prompt: "Assign Item To"
				= f.button :submit


			= link_to 'Show', @list_item
			\|
			= link_to 'Back', list_items_path
