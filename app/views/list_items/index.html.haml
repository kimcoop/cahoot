.container
  .row
    .span12
      %h1 Items

%table.table.table-bordered.table-hover
  %tr
    %th Name
    %th Description
    %th Created By
    %th Assigned To
    %th Created On
    %th
    %th
    %th

  - @list_items.each do |list_item|
    %tr
      %td= list_item.name
      %td= list_item.description
      %td= list_item.user.full_name unless list_item.user_id.nil?
      /%td= list_item.owner.full_name
      %td= list_item.owner_id
      %td= list_item.created_at
      %td= link_to 'Show', list_item
      %td= link_to 'Edit', edit_list_item_path(list_item)
      %td= link_to 'Delete', list_item, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New List Item', new_list_item_path
