/ %p#notice= notice
.container
	.row
		.span8
			%h2
				= @list.name
			%p= "Created by #{@list.user.full_name}" 
			%p= @list.description

	.row
		.span8
			- @list.list_items.each do |list_item|
				%h3= list_item.name

	.row
		.span12
			= link_to 'Edit', edit_list_path(@list)
			\|
			= link_to 'Back', lists_path
